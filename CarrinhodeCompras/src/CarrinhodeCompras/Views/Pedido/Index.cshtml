@model IEnumerable<CarrinhodeCompras.Models.Pedido>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row col-md-6">
    <p>
        <a asp-action="Create" class="btn btn-default btn-sm">Novo Pedido</a>
    </p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    <a asp-action="InclusaodeItensNoPedido" asp-route-id="@item.Id" class="btn btn-success btn-xs">Itens</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default btn-xs">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Excluir</a>
                </td>
            </tr>
        }
    </table>
</div>

